@model IEnumerable<FinalProject.Models.HandoverTicket>
@using FinalProject.Enums
@{
    ViewData["Title"] = "Quản lý phiếu bàn giao tài sản";
    Layout = "_WarehouseManagerLayout";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2><i class="fas fa-exchange-alt"></i> Quản lý phiếu bàn giao</h2>
        </div>
        <div class="col-md-6 text-end">
            <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("CreateHandoverTicket", "HandoverTicket")'">
                <i class="fas fa-plus-circle"></i> Tạo phiếu bàn giao mới
            </button>
        </div>
    </div>

    <!-- Notifications -->
    <partial name="_NotificationPartial" />

    <div class="row mb-4">
        <div class="col-md-12">
            <ul class="nav nav-tabs" id="handoverTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="active-tab" data-bs-toggle="tab" data-bs-target="#active" type="button" role="tab" aria-controls="active" aria-selected="true">
                        <i class="fas fa-check-circle"></i> Đang hoạt động <span class="badge bg-primary">@ViewBag.ActiveHandovers.Count</span>
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="inactive-tab" data-bs-toggle="tab" data-bs-target="#inactive" type="button" role="tab" aria-controls="inactive" aria-selected="false">
                        <i class="fas fa-times-circle"></i> Đã kết thúc <span class="badge bg-secondary">@ViewBag.InactiveHandovers.Count</span>
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="pending-returns-tab" data-bs-toggle="tab" data-bs-target="#pending-returns" type="button" role="tab" aria-controls="pending-returns" aria-selected="false">
                        <i class="fas fa-undo-alt"></i> Chờ xác nhận trả <span class="badge bg-warning">@ViewBag.PendingReturns.Count</span>
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="all-tab" data-bs-toggle="tab" data-bs-target="#all" type="button" role="tab" aria-controls="all" aria-selected="false">
                        <i class="fas fa-list"></i> Tất cả
                    </button>
                </li>
            </ul>
        </div>
    </div>

    <div class="tab-content" id="handoverTabsContent">
        <!-- Active Handovers Tab -->
        <div class="tab-pane fade show active" id="active" role="tabpanel" aria-labelledby="active-tab">
            <div class="table-container">
                <table class="table custom-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Người bàn giao</th>
                            <th>Người nhận</th>
                            <th>Tài sản</th>
                            <th>Số lượng</th>
                            <th>Phòng ban</th>
                            <th>Ngày bàn giao</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.ActiveHandovers != null)
                        {
                            @foreach (var item in ViewBag.ActiveHandovers)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@(item.HandoverBy?.FullName ?? "N/A")</td>
                                    <td>@(item.HandoverTo?.FullName ?? "N/A")</td>
                                    <td>@(item.WarehouseAsset?.Asset?.Name ?? "N/A")</td>
                                    <td>@item.Quantity</td>
                                    <td>@(item.Department?.Name ?? "N/A")</td>
                                    <td>@(item.DateCreated?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                                    <td>
                                        <div class="action-buttons">
                                            <a asp-action="CreateHandoverReturn" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                                <i class="fas fa-undo-alt"></i> Thu hồi
                                            </a>
                                            <a href="#" class="btn btn-sm btn-info" data-bs-toggle="modal" data-bs-target="#handoverDetailModal"
                                               data-id="@item.Id" data-handover-by="@(item.HandoverBy?.FullName ?? "N/A")"
                                               data-handover-to="@(item.HandoverTo?.FullName ?? "N/A")"
                                               data-asset="@(item.WarehouseAsset?.Asset?.Name ?? "N/A")"
                                               data-quantity="@item.Quantity"
                                               data-department="@(item.Department?.Name ?? "N/A")"
                                               data-date="@(item.DateCreated?.ToString("dd/MM/yyyy") ?? "N/A")"
                                               data-note="@item.Note">
                                                <i class="fas fa-info-circle"></i> Chi tiết
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>

                @if (ViewBag.ActiveHandovers == null || ViewBag.ActiveHandovers.Count == 0)
                {
                    <div class="alert alert-info text-center" role="alert">
                        Không có phiếu bàn giao nào đang hoạt động.
                    </div>
                }
            </div>
        </div>

        <!-- Inactive Handovers Tab -->
        <div class="tab-pane fade" id="inactive" role="tabpanel" aria-labelledby="inactive-tab">
            <div class="table-container">
                <table class="table custom-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Người bàn giao</th>
                            <th>Người nhận</th>
                            <th>Tài sản</th>
                            <th>Số lượng</th>
                            <th>Phòng ban</th>
                            <th>Ngày bàn giao</th>
                            <th>Ngày kết thúc</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.InactiveHandovers != null)
                        {
                            @foreach (var item in ViewBag.InactiveHandovers)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@(item.HandoverBy?.FullName ?? "N/A")</td>
                                    <td>@(item.HandoverTo?.FullName ?? "N/A")</td>
                                    <td>@(item.WarehouseAsset?.Asset?.Name ?? "N/A")</td>
                                    <td>@item.Quantity</td>
                                    <td>@(item.Department?.Name ?? "N/A")</td>
                                    <td>@(item.DateCreated?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                                    <td>@(item.ActualEndDate?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                                    <td>
                                        <div class="action-buttons">
                                            <a href="#" class="btn btn-sm btn-info" data-bs-toggle="modal" data-bs-target="#handoverDetailModal"
                                               data-id="@item.Id" data-handover-by="@(item.HandoverBy?.FullName ?? "N/A")"
                                               data-handover-to="@(item.HandoverTo?.FullName ?? "N/A")"
                                               data-asset="@(item.WarehouseAsset?.Asset?.Name ?? "N/A")"
                                               data-quantity="@item.Quantity"
                                               data-department="@(item.Department?.Name ?? "N/A")"
                                               data-date="@(item.DateCreated?.ToString("dd/MM/yyyy") ?? "N/A")"
                                               data-end-date="@(item.ActualEndDate?.ToString("dd/MM/yyyy") ?? "N/A")"
                                               data-note="@item.Note">
                                                <i class="fas fa-info-circle"></i> Chi tiết
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>

                @if (ViewBag.InactiveHandovers == null || ViewBag.InactiveHandovers.Count == 0)
                {
                    <div class="alert alert-info text-center" role="alert">
                        Không có phiếu bàn giao nào đã kết thúc.
                    </div>
                }
            </div>
        </div>

        <!-- Pending Returns Tab -->
        <div class="tab-pane fade" id="pending-returns" role="tabpanel" aria-labelledby="pending-returns-tab">
            <div class="table-container">
                <table class="table custom-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Người bàn giao</th>
                            <th>Người nhận/trả</th>
                            <th>Tài sản</th>
                            <th>Số lượng</th>
                            <th>Ngày bàn giao</th>
                            <th>Ngày yêu cầu trả</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.PendingReturns != null)
                        {
                            @foreach (var item in ViewBag.PendingReturns)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@(item.HandoverTicket?.HandoverBy?.FullName ?? "N/A")</td>
                                    <td>@(item.ReturnBy?.FullName ?? "N/A")</td>
                                    <td>@(item.HandoverTicket?.WarehouseAsset?.Asset?.Name ?? "N/A")</td>
                                    <td>@(item.HandoverTicket?.Quantity ?? 0)</td>
                                    <td>@(item.HandoverTicket?.DateCreated?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                                    <td>@(item.ReturnDate?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</td>
                                    <td>
                                        <div class="action-buttons">
                                            <a asp-action="ProcessHandoverReturn" asp-route-id="@item.Id" class="btn btn-sm btn-success">
                                                <i class="fas fa-check"></i> Xác nhận trả
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>

                @if (ViewBag.PendingReturns == null || ViewBag.PendingReturns.Count == 0)
                {
                    <div class="alert alert-info text-center" role="alert">
                        Không có yêu cầu trả tài sản bàn giao nào đang chờ xác nhận.
                    </div>
                }
            </div>
        </div>

        <!-- All Handovers Tab -->
        <div class="tab-pane fade" id="all" role="tabpanel" aria-labelledby="all-tab">
            <div class="table-container">
                <table class="table custom-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Người bàn giao</th>
                            <th>Người nhận</th>
                            <th>Tài sản</th>
                            <th>Số lượng</th>
                            <th>Phòng ban</th>
                            <th>Ngày bàn giao</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@(item.HandoverBy?.FullName ?? "N/A")</td>
                                <td>@(item.HandoverTo?.FullName ?? "N/A")</td>
                                <td>@(item.WarehouseAsset?.Asset?.Name ?? "N/A")</td>
                                <td>@item.Quantity</td>
                                <td>@(item.Department?.Name ?? "N/A")</td>
                                <td>@(item.DateCreated?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                                <td>
                                    @if (item.IsActive)
                                    {
                                        <span class="badge bg-success">Đang hoạt động</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Đã kết thúc</span>
                                    }
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        @if (item.IsActive)
                                        {
                                            <a asp-action="CreateHandoverReturn" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                                <i class="fas fa-undo-alt"></i> Thu hồi
                                            </a>
                                        }
                                        <a href="#" class="btn btn-sm btn-info" data-bs-toggle="modal" data-bs-target="#handoverDetailModal"
                                           data-id="@item.Id" data-handover-by="@(item.HandoverBy?.FullName ?? "N/A")"
                                           data-handover-to="@(item.HandoverTo?.FullName ?? "N/A")"
                                           data-asset="@(item.WarehouseAsset?.Asset?.Name ?? "N/A")"
                                           data-quantity="@item.Quantity"
                                           data-department="@(item.Department?.Name ?? "N/A")"
                                           data-date="@(item.DateCreated?.ToString("dd/MM/yyyy") ?? "N/A")"
                                           data-end-date="@(item.ActualEndDate?.ToString("dd/MM/yyyy") ?? "N/A")"
                                           data-note="@item.Note"
                                           data-status="@(item.IsActive ? "Đang hoạt động" : "Đã kết thúc")">
                                            <i class="fas fa-info-circle"></i> Chi tiết
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                @if (!Model.Any())
                {
                    <div class="alert alert-info text-center" role="alert">
                        Không có phiếu bàn giao nào.
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Handover Detail Modal -->
<div class="modal fade" id="handoverDetailModal" tabindex="-1" aria-labelledby="handoverDetailModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="handoverDetailModalLabel">Chi tiết phiếu bàn giao</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <h6>Thông tin cơ bản</h6>
                        <table class="table table-sm">
                            <tr>
                                <th>ID phiếu:</th>
                                <td id="modalId"></td>
                            </tr>
                            <tr>
                                <th>Người bàn giao:</th>
                                <td id="modalHandoverBy"></td>
                            </tr>
                            <tr>
                                <th>Người nhận:</th>
                                <td id="modalHandoverTo"></td>
                            </tr>
                            <tr>
                                <th>Phòng ban:</th>
                                <td id="modalDepartment"></td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <h6>Thông tin tài sản</h6>
                        <table class="table table-sm">
                            <tr>
                                <th>Tài sản:</th>
                                <td id="modalAsset"></td>
                            </tr>
                            <tr>
                                <th>Số lượng:</th>
                                <td id="modalQuantity"></td>
                            </tr>
                            <tr>
                                <th>Ngày bàn giao:</th>
                                <td id="modalDate"></td>
                            </tr>
                            <tr id="modalEndDateRow">
                                <th>Ngày kết thúc:</th>
                                <td id="modalEndDate"></td>
                            </tr>
                        </table>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <h6>Trạng thái phiếu</h6>
                        <p id="modalStatus"></p>
                        <h6>Ghi chú</h6>
                        <p id="modalNote" class="note-pre"></p>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                <a href="#" id="modalDetailLink" class="btn btn-primary">Xem chi tiết</a>
            </div>
        </div>
    </div>
</div>

<style>
    .note-pre {
        white-space: pre-wrap;
        background-color: #f8f9fa;
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #dee2e6;
        max-height: 200px;
        overflow-y: auto;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Handle modal data
            $('#handoverDetailModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var id = button.data('id');
                var handoverBy = button.data('handover-by');
                var handoverTo = button.data('handover-to');
                var asset = button.data('asset');
                var quantity = button.data('quantity');
                var department = button.data('department');
                var date = button.data('date');
                var endDate = button.data('end-date');
                var note = button.data('note');
                var status = button.data('status');

                var modal = $(this);
                modal.find('#modalId').text(id);
                modal.find('#modalHandoverBy').text(handoverBy);
                modal.find('#modalHandoverTo').text(handoverTo);
                modal.find('#modalAsset').text(asset);
                modal.find('#modalQuantity').text(quantity);
                modal.find('#modalDepartment').text(department);
                modal.find('#modalDate').text(date);

                // Handle end date
                if (endDate) {
                    modal.find('#modalEndDateRow').show();
                    modal.find('#modalEndDate').text(endDate);
                } else {
                    modal.find('#modalEndDateRow').hide();
                }

                // Handle status
                if (status) {
                    modal.find('#modalStatus').html('<span class="badge ' + (status === 'Đang hoạt động' ? 'bg-success' : 'bg-secondary') + '">' + status + '</span>');
                } else {
                    modal.find('#modalStatus').html('<span class="badge bg-success">Đang hoạt động</span>');
                }

                // Handle note
                if (note) {
                    modal.find('#modalNote').text(note);
                } else {
                    modal.find('#modalNote').text('Không có ghi chú');
                }

                // Update detail link
                modal.find('#modalDetailLink').attr('href', '@Url.Action("HandoverTicketDetails", "WarehouseManager")/' + id);
            });

            // Save active tab
            $('a[data-bs-toggle="tab"]').on('shown.bs.tab', function (e) {
                localStorage.setItem('handoverActiveTab', $(e.target).attr('id'));
            });

            // Restore active tab
            var activeTab = localStorage.getItem('handoverActiveTab');
            if (activeTab) {
                $('#' + activeTab).tab('show');
            }
        });
    </script>
}