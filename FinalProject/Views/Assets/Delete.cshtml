@model FinalProject.Models.Asset
@{
    ViewData["Title"] = "Xóa tài sản";
    Layout = "_WarehouseManagerLayout";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2><i class="fas fa-trash text-danger"></i> Xóa tài sản</h2>
        </div>
    </div>

    @if (!Model.IsDeleted)
    {
        <div class="alert alert-danger">
            <h5><i class="fas fa-exclamation-triangle"></i> Xác nhận xóa</h5>
            <p>Bạn có chắc chắn muốn xóa tài sản này? Thao tác này sẽ đánh dấu xóa tài sản (soft delete) và có thể khôi phục lại sau.</p>
        </div>
    }
    else
    {
        <div class="alert alert-secondary">
            <h5><i class="fas fa-info-circle"></i> Thông tin</h5>
            <p>Tài sản này đã bị xóa trước đó vào ngày @Model.DeletedDate?.ToString("dd/MM/yyyy HH:mm").</p>
        </div>
    }

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Thông tin tài sản</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Tên tài sản</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Danh mục</dt>
                <dd class="col-sm-9">@(Model.AssetCategory?.Name ?? "N/A")</dd>

                <dt class="col-sm-3">Giá</dt>
                <dd class="col-sm-9">@Model.Price.ToString("N0") VNĐ</dd>

                <dt class="col-sm-3">Đơn vị</dt>
                <dd class="col-sm-9">@Model.Unit</dd>

                <dt class="col-sm-3">Mô tả</dt>
                <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Description) ? "Không có" : Model.Description)</dd>

                <dt class="col-sm-3">Ghi chú</dt>
                <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Note) ? "Không có" : Model.Note)</dd>

                <dt class="col-sm-3">Ngày tạo</dt>
                <dd class="col-sm-9">@(Model.DateCreated?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</dd>
            </dl>
        </div>
    </div>

    <div class="form-container">
        @if (!Model.IsDeleted)
        {
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="form-group text-end">
                    <a asp-action="Index" class="btn btn-outline-secondary me-2">
                        <i class="fas fa-times"></i> Hủy
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Xác nhận xóa
                    </button>
                </div>
            </form>
        }
        else
        {
            <div class="form-group text-end">
                <a asp-action="Index" class="btn btn-outline-secondary me-2">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
                <a asp-action="Restore" asp-route-id="@Model.Id" class="btn btn-success">
                    <i class="fas fa-undo"></i> Khôi phục
                </a>
            </div>
        }
    </div>
</div>