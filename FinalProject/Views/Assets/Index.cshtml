@model IEnumerable<FinalProject.Models.ViewModels.AssetViewModel>
@using FinalProject.Enums
@{
    ViewData["Title"] = "Quản lý tài sản";
    Layout = "_WarehouseManagerLayout";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2><i class="fas fa-boxes"></i> Danh sách tài sản</h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Thêm tài sản mới
            </a>
        </div>
    </div>

    <!-- Notifications -->
    <partial name="_NotificationPartial" />

    <!-- Search Box -->
    <div class="row mb-4">
        <div class="col-md-12">
            <form asp-action="Index" method="get" class="search-box">
                <div class="input-group">
                    <input type="text" name="searchString" class="form-control" placeholder="Tìm kiếm tài sản..."
                           value="@ViewBag.CurrentFilter">

                    <!-- Hidden field for showDeleted parameter -->
                    <input type="hidden" name="showDeleted" value="@ViewBag.ShowDeleted.ToString().ToLower()">

                    <!-- Hidden field for sort order -->
                    @if (!string.IsNullOrEmpty(ViewBag.CurrentSort))
                    {
                        <input type="hidden" name="sortOrder" value="@ViewBag.CurrentSort">
                    }

                    <!-- Hidden field for status filter (only if not in deleted mode) -->
                    @if (!ViewBag.ShowDeleted && !string.IsNullOrEmpty(ViewBag.StatusFilter))
                    {
                        <input type="hidden" name="status" value="@ViewBag.StatusFilter">
                    }

                    <button type="submit" class="btn btn-outline-secondary">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Filter Options -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body py-2">
                    <div class="d-flex flex-wrap gap-2">
                        <a asp-action="Index" asp-route-showDeleted="@ViewBag.ShowDeleted" class="btn @(string.IsNullOrEmpty(ViewBag.StatusFilter) ? "btn-primary" : "btn-outline-primary") btn-sm">
                            Tất cả
                        </a>
                        <a asp-action="Index" asp-route-status="GOOD" asp-route-showDeleted="@ViewBag.ShowDeleted" asp-route-currentFilter="@ViewBag.CurrentFilter" asp-route-sortOrder="@ViewBag.CurrentSort" class="btn @(ViewBag.StatusFilter == "GOOD" ? "btn-success" : "btn-outline-success") btn-sm">
                            Tốt
                        </a>
                        <a asp-action="Index" asp-route-status="BROKEN" asp-route-showDeleted="@ViewBag.ShowDeleted" asp-route-currentFilter="@ViewBag.CurrentFilter" asp-route-sortOrder="@ViewBag.CurrentSort" class="btn @(ViewBag.StatusFilter == "BROKEN" ? "btn-danger" : "btn-outline-danger") btn-sm">
                            Hỏng
                        </a>
                        <a asp-action="Index" asp-route-status="FIXING" asp-route-showDeleted="@ViewBag.ShowDeleted" asp-route-currentFilter="@ViewBag.CurrentFilter" asp-route-sortOrder="@ViewBag.CurrentSort" class="btn @(ViewBag.StatusFilter == "FIXING" ? "btn-warning" : "btn-outline-warning") btn-sm">
                            Đang sửa
                        </a>
                        <a asp-action="Index" asp-route-status="DISPOSED" asp-route-showDeleted="@ViewBag.ShowDeleted" asp-route-currentFilter="@ViewBag.CurrentFilter" asp-route-sortOrder="@ViewBag.CurrentSort" class="btn @(ViewBag.StatusFilter == "DISPOSED" ? "btn-secondary" : "btn-outline-secondary") btn-sm">
                            Đã thanh lý
                        </a>

                        <!-- Deleted items filter button - on the same row -->
                        <a asp-action="Index" asp-route-showDeleted="@(!ViewBag.ShowDeleted)" asp-route-currentFilter="@ViewBag.CurrentFilter" asp-route-sortOrder="@ViewBag.CurrentSort" class="btn @(ViewBag.ShowDeleted ? "btn-dark" : "btn-outline-dark") btn-sm">
                            <i class="fas fa-trash"></i> Đã xóa
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="table-container">
        <table class="table custom-table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewBag.IdSortParam" asp-route-includeDeleted="@ViewBag.IncludeDeleted" asp-route-status="@ViewBag.StatusFilter" asp-route-currentFilter="@ViewBag.CurrentFilter" class="text-dark">
                            Mã
                            @if (ViewBag.CurrentSort == "id_asc")
                            {
                                <i class="fas fa-sort-up"></i>
                            }
                            else if (ViewBag.CurrentSort == "id_desc")
                            {
                                <i class="fas fa-sort-down"></i>
                            }
                            else
                            {
                                <i class="fas fa-sort"></i>
                            }
                        </a>
                    </th>
                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewBag.NameSortParam" asp-route-includeDeleted="@ViewBag.IncludeDeleted" asp-route-status="@ViewBag.StatusFilter" asp-route-currentFilter="@ViewBag.CurrentFilter" class="text-dark">
                            Tên tài sản
                            @if (ViewBag.CurrentSort == "name_asc")
                            {
                                <i class="fas fa-sort-up"></i>
                            }
                            else if (ViewBag.CurrentSort == "name_desc")
                            {
                                <i class="fas fa-sort-down"></i>
                            }
                            else
                            {
                                <i class="fas fa-sort"></i>
                            }
                        </a>
                    </th>
                    <th>Loại tài sản</th>
                    <th>Đơn vị</th>
                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewBag.PriceSortParam" asp-route-includeDeleted="@ViewBag.IncludeDeleted" asp-route-status="@ViewBag.StatusFilter" asp-route-currentFilter="@ViewBag.CurrentFilter" class="text-dark">
                            Giá
                            @if (ViewBag.CurrentSort == "price_asc")
                            {
                                <i class="fas fa-sort-up"></i>
                            }
                            else if (ViewBag.CurrentSort == "price_desc")
                            {
                                <i class="fas fa-sort-down"></i>
                            }
                            else
                            {
                                <i class="fas fa-sort"></i>
                            }
                        </a>
                    </th>
                    <th>Trạng thái</th>
                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewBag.DateSortParam" asp-route-includeDeleted="@ViewBag.IncludeDeleted" asp-route-status="@ViewBag.StatusFilter" asp-route-currentFilter="@ViewBag.CurrentFilter" class="text-dark">
                            Ngày tạo
                            @if (ViewBag.CurrentSort == "date_asc")
                            {
                                <i class="fas fa-sort-up"></i>
                            }
                            else if (ViewBag.CurrentSort == "date_desc")
                            {
                                <i class="fas fa-sort-down"></i>
                            }
                            else
                            {
                                <i class="fas fa-sort"></i>
                            }
                        </a>
                    </th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="@(item.Asset.IsDeleted ? "table-secondary" : "")">
                        <td>@item.Asset.Id</td>
                        <td>@item.Asset.Name</td>
                        <td>@(item.Asset.AssetCategory?.Name ?? "N/A")</td>
                        <td>@item.Asset.Unit</td>
                        <td>@item.Asset.Price.ToString("N0") VNĐ</td>
                        <td>
                            @if (item.TotalGoodQuantity > 0)
                            {
                                <span class="badge bg-success">Tốt</span>
                            }
                            else if (item.TotalBrokenQuantity > 0)
                            {
                                <span class="badge bg-danger">Hỏng</span>
                            }
                            else if (item.TotalFixingQuantity > 0)
                            {
                                <span class="badge bg-warning">Đang sửa</span>
                            }
                            else if (item.TotalDisposedQuantity > 0)
                            {
                                <span class="badge bg-secondary">Đã thanh lý</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Không xác định</span>
                            }
                        </td>
                        <td>@(item.Asset.DateCreated?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                        <td>
                            <div class="action-buttons">
                                @if (!item.Asset.IsDeleted)
                                {
                                    <a asp-action="Edit" asp-route-id="@item.Asset.Id" class="btn btn-sm btn-primary" title="Chỉnh sửa">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Asset.Id" class="btn btn-sm btn-info" title="Chi tiết">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Asset.Id" class="btn btn-sm btn-danger" title="Xóa">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                }
                                else
                                {
                                    <a asp-action="Details" asp-route-id="@item.Asset.Id" class="btn btn-sm btn-info" title="Chi tiết">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                    <a asp-action="Restore" asp-route-id="@item.Asset.Id" class="btn btn-sm btn-success" title="Khôi phục">
                                        <i class="fas fa-undo"></i>
                                    </a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @if (!Model.Any())
        {
            <div class="alert alert-info text-center" role="alert">
                Không tìm thấy tài sản nào. <a asp-action="Create">Thêm tài sản mới</a>
            </div>
        }
    </div>

    <!-- Pagination -->
    @if (ViewBag.TotalPages > 1)
    {
        <div class="row">
            <div class="col-md-12">
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        @if (ViewBag.CurrentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-route-page="1" asp-route-sortOrder="@ViewBag.CurrentSort"
                                   asp-route-currentFilter="@ViewBag.CurrentFilter" asp-route-status="@ViewBag.StatusFilter"
                                   asp-route-showDeleted="@ViewBag.ShowDeleted">
                                    <i class="fas fa-angle-double-left"></i>
                                </a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage - 1)" asp-route-sortOrder="@ViewBag.CurrentSort"
                                   asp-route-currentFilter="@ViewBag.CurrentFilter" asp-route-status="@ViewBag.StatusFilter"
                                   asp-route-showDeleted="@ViewBag.ShowDeleted">
                                    <i class="fas fa-angle-left"></i>
                                </a>
                            </li>
                        }

                        @for (int i = Math.Max(1, ViewBag.CurrentPage - 2); i <= Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2); i++)
                        {
                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-sortOrder="@ViewBag.CurrentSort"
                                   asp-route-currentFilter="@ViewBag.CurrentFilter" asp-route-status="@ViewBag.StatusFilter"
                                   asp-route-showDeleted="@ViewBag.ShowDeleted">
                                    @i
                                </a>
                            </li>
                        }

                        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage + 1)" asp-route-sortOrder="@ViewBag.CurrentSort"
                                   asp-route-currentFilter="@ViewBag.CurrentFilter" asp-route-status="@ViewBag.StatusFilter"
                                   asp-route-showDeleted="@ViewBag.ShowDeleted">
                                    <i class="fas fa-angle-right"></i>
                                </a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-route-page="@ViewBag.TotalPages" asp-route-sortOrder="@ViewBag.CurrentSort"
                                   asp-route-currentFilter="@ViewBag.CurrentFilter" asp-route-status="@ViewBag.StatusFilter"
                                   asp-route-showDeleted="@ViewBag.ShowDeleted">
                                    <i class="fas fa-angle-double-right"></i>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Thêm các xử lý JavaScript cho trang nếu cần
        });
    </script>
}