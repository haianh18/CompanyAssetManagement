@model IEnumerable<FinalProject.Models.BorrowTicket>
@using FinalProject.Enums
@{
    ViewData["Title"] = "Phiếu mượn của tôi";
    Layout = "_GeneralUserLayout";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2><i class="fas fa-clipboard-list"></i> Phiếu mượn của tôi</h2>
        </div>
        <div class="col-md-4 text-end">
            <a asp-controller="BorrowRequest" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Tạo phiếu mượn mới
            </a>
        </div>
    </div>

    <!-- Notifications -->
    <partial name="_NotificationPartial" />

    <div class="row mb-4">
        <div class="col-md-12">
            <ul class="nav nav-tabs" id="borrowTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="all-tab" data-bs-toggle="tab" data-bs-target="#all" type="button" role="tab" aria-controls="all" aria-selected="true">
                        <i class="fas fa-list"></i> Tất cả <span class="badge bg-primary">@Model.Count()</span>
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="pending-tab" data-bs-toggle="tab" data-bs-target="#pending" type="button" role="tab" aria-controls="pending" aria-selected="false">
                        <i class="fas fa-clock"></i> Chờ duyệt <span class="badge bg-warning">@ViewBag.PendingRequests.Count</span>
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="approved-tab" data-bs-toggle="tab" data-bs-target="#approved" type="button" role="tab" aria-controls="approved" aria-selected="false">
                        <i class="fas fa-check"></i> Đang mượn <span class="badge bg-success">@ViewBag.ApprovedRequests.Count</span>
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="rejected-tab" data-bs-toggle="tab" data-bs-target="#rejected" type="button" role="tab" aria-controls="rejected" aria-selected="false">
                        <i class="fas fa-times"></i> Từ chối <span class="badge bg-danger">@ViewBag.RejectedRequests.Count</span>
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="returned-tab" data-bs-toggle="tab" data-bs-target="#returned" type="button" role="tab" aria-controls="returned" aria-selected="false">
                        <i class="fas fa-undo"></i> Đã trả <span class="badge bg-secondary">@ViewBag.ReturnedRequests.Count</span>
                    </button>
                </li>
                @if (ViewBag.OverdueRequests != null && ViewBag.OverdueRequests.Count > 0)
                {
                    <li class="nav-item" role="presentation">
                        <button class="nav-link text-danger" id="overdue-tab" data-bs-toggle="tab" data-bs-target="#overdue" type="button" role="tab" aria-controls="overdue" aria-selected="false">
                            <i class="fas fa-exclamation-triangle"></i> Quá hạn <span class="badge bg-danger">@ViewBag.OverdueRequests.Count</span>
                        </button>
                    </li>
                }
            </ul>
        </div>
    </div>

    <div class="tab-content" id="borrowTabsContent">
        <!-- All Requests Tab -->
        <div class="tab-pane fade show active" id="all" role="tabpanel" aria-labelledby="all-tab">
            <div class="table-container">
                <table class="table custom-table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Tài sản</th>
                            <th>Kho</th>
                            <th>Số lượng</th>
                            <th>Ngày mượn</th>
                            <th>Ngày trả</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@(item.WarehouseAsset?.Asset?.Name ?? "N/A")</td>
                                <td>@(item.WarehouseAsset?.Warehouse?.Name ?? "N/A")</td>
                                <td>@item.Quantity</td>
                                <td>@(item.DateCreated?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                                <td>@(item.ReturnDate?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                                <td>
                                    @if (item.IsReturned)
                                    {
                                        <span class="badge bg-success">Đã trả</span>
                                    }
                                    else
                                    {
                                        switch (item.ApproveStatus)
                                        {
                                            case TicketStatus.Approved:
                                                <span class="badge bg-primary">Đã duyệt</span>
                                                break;
                                            case TicketStatus.Pending:
                                                <span class="badge bg-warning">Chờ duyệt</span>
                                                break;
                                            case TicketStatus.Rejected:
                                                <span class="badge bg-danger">Từ chối</span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">Không xác định</span>
                                                break;
                                        }
                                    }
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <a asp-controller="BorrowRequest" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        @if (item.ApproveStatus == TicketStatus.Approved && !item.IsReturned)
                                        {
                                            if (item.ReturnDate > DateTime.Now.AddDays(7) && !item.IsExtended && 
                                                item.ExtensionApproveStatus != TicketStatus.Pending)
                                            {
                                                <a asp-controller="BorrowRequest" asp-action="RequestExtension" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                                    <i class="fas fa-calendar-plus"></i>
                                                </a>
                                            }
                                            <a asp-controller="BorrowRequest" asp-action="ReturnAsset" asp-route-id="@item.Id" class="btn btn-sm btn-success">
                                                <i class="fas fa-undo-alt"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                @if (!Model.Any())
                {
                    <div class="alert alert-info text-center" role="alert">
                        Bạn chưa có phiếu mượn nào. <a asp-controller="BorrowRequest" asp-action="Create">Tạo phiếu mượn mới</a>
                    </div>
                }
            </div>
        </div>

        <!-- Pending Requests Tab -->
        <div class="tab-pane fade" id="pending" role="tabpanel" aria-labelledby="pending-tab">
            <div class="table-container">
                <table class="table custom-table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Tài sản</th>
                            <th>Kho</th>
                            <th>Số lượng</th>
                            <th>Ngày mượn</th>
                            <th>Ngày trả</th>
                            <th>Ghi chú</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.PendingRequests)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@(item.WarehouseAsset?.Asset?.Name ?? "N/A")</td>
                                <td>@(item.WarehouseAsset?.Warehouse?.Name ?? "N/A")</td>
                                <td>@item.Quantity</td>
                                <td>@(item.DateCreated?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                                <td>@(item.ReturnDate?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                                <td>@item.Note</td>
                                <td>
                                    <div class="action-buttons">
                                        <a asp-controller="BorrowRequest" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                @if (!ViewBag.PendingRequests.Any())
                {
                    <div class="alert alert-info text-center" role="alert">
                        Không có phiếu mượn nào đang chờ duyệt.
                    </div>
                }
            </div>
        </div>

        <!-- Approved Requests Tab -->
        <div class="tab-pane fade" id="approved" role="tabpanel" aria-labelledby="approved-tab">
            <div class="table-container">
                <table class="table custom-table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Tài sản</th>
                            <th>Kho</th>
                            <th>Số lượng</th>
                            <th>Ngày mượn</th>
                            <th>Ngày trả</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.ApprovedRequests)
                        {
                            bool isOverdue = item.ReturnDate < DateTime.Now;
                            <tr class="@(isOverdue ? "table-danger" : "")">
                                <td>@item.Id</td>
                                <td>@(item.WarehouseAsset?.Asset?.Name ?? "N/A")</td>
                                <td>@(item.WarehouseAsset?.Warehouse?.Name ?? "N/A")</td>
                                <td>@item.Quantity</td>
                                <td>@(item.DateCreated?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                                <td>
                                    @if (isOverdue)
                                    {
                                        <span class="text-danger fw-bold">
                                            @(item.ReturnDate?.ToString("dd/MM/yyyy") ?? "N/A")
                                            <i class="fas fa-exclamation-triangle"></i>
                                        </span>
                                    }
                                    else
                                    {
                                        <span>@(item.ReturnDate?.ToString("dd/MM/yyyy") ?? "N/A")</span>
                                    }
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <a asp-controller="BorrowRequest" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        @if (item.ReturnDate > DateTime.Now.AddDays(7) && !item.IsExtended && 
                                           item.ExtensionApproveStatus != TicketStatus.Pending)
                                        {
                                            <a asp-controller="BorrowRequest" asp-action="RequestExtension" asp-route-id="@item.Id" 
                                               class="btn btn-sm btn-warning" title="Yêu cầu gia hạn">
                                                <i class="fas fa-calendar-plus"></i>
                                            </a>
                                        }
                                        <a asp-controller="BorrowRequest" asp-action="ReturnAsset" asp-route-id="@item.Id" 
                                           class="btn btn-sm btn-success" title="Trả tài sản">
                                            <i class="fas fa-undo-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                @if (!ViewBag.ApprovedRequests.Any())
                {
                    <div class="alert alert-info text-center" role="alert">
                        Không có phiếu mượn nào đang được duyệt.
                    </div>
                }
            </div>
        </div>

        <!-- Rejected Requests Tab -->
        <div class="tab-pane fade" id="rejected" role="tabpanel" aria-labelledby="rejected-tab">
            <div class="table-container">
                <table class="table custom-table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Tài sản</th>
                            <th>Kho</th>
                            <th>Số lượng</th>
                            <th>Ngày mượn</th>
                            <th>Ngày từ chối</th>
                            <th>Lý do từ chối</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.RejectedRequests)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@(item.WarehouseAsset?.Asset?.Name ?? "N/A")</td>
                                <td>@(item.WarehouseAsset?.Warehouse?.Name ?? "N/A")</td>
                                <td>@item.Quantity</td>
                                <td>@(item.DateCreated?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                                <td>@(item.DateModified?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                                <td>@(item.Note ?? "Không có lý do")</td>
                                <td>
                                    <div class="action-buttons">
                                        <a asp-controller="BorrowRequest" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                @if (!ViewBag.RejectedRequests.Any())
                {
                    <div class="alert alert-info text-center" role="alert">
                        Không có phiếu mượn nào bị từ chối.
                    </div>
                }
            </div>
        </div>

        <!-- Returned Requests Tab -->
        <div class="tab-pane fade" id="returned" role="tabpanel" aria-labelledby="returned-tab">
            <div class="table-container">
                <table class="table custom-table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Tài sản</th>
                            <th>Kho</th>
                            <th>Số lượng</th>
                            <th>Ngày mượn</th>
                            <th>Ngày trả dự kiến</th>
                            <th>Ngày trả thực tế</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.ReturnedRequests)
                        {
                            var returnTicket = item.ReturnTickets.FirstOrDefault(r => r.ApproveStatus == TicketStatus.Approved);
                            <tr>
                                <td>@item.Id</td>
                                <td>@(item.WarehouseAsset?.Asset?.Name ?? "N/A")</td>
                                <td>@(item.WarehouseAsset?.Warehouse?.Name ?? "N/A")</td>
                                <td>@item.Quantity</td>
                                <td>@(item.DateCreated?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                                <td>@(item.ReturnDate?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                                <td>@(returnTicket?.ActualReturnDate?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                                <td>
                                    <div class="action-buttons">
                                        <a asp-controller="BorrowRequest" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                @if (!ViewBag.ReturnedRequests.Any())
                {
                    <div class="alert alert-info text-center" role="alert">
                        Không có phiếu mượn nào đã trả.
                    </div>
                }
            </div>
        </div>

        @if (ViewBag.OverdueRequests != null && ViewBag.OverdueRequests.Count > 0)
        {
            <!-- Overdue Requests Tab -->
            <div class="tab-pane fade" id="overdue" role="tabpanel" aria-labelledby="overdue-tab">
                <div class="alert alert-danger mt-3">
                    <h5><i class="fas fa-exclamation-triangle"></i> Chú ý</h5>
                    <p>Bạn có @ViewBag.OverdueRequests.Count tài sản đã quá hạn trả. Vui lòng trả lại ngay để tránh bị phạt.</p>
                </div>

                <div class="table-container">
                    <table class="table custom-table table-hover table-danger">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Tài sản</th>
                                <th>Kho</th>
                                <th>Số lượng</th>
                                <th>Ngày mượn</th>
                                <th>Ngày trả</th>
                                <th>Quá hạn</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.OverdueRequests)
                            {
                                var daysOverdue = (DateTime.Now - item.ReturnDate.Value).Days;
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@(item.WarehouseAsset?.Asset?.Name ?? "N/A")</td>
                                    <td>@(item.WarehouseAsset?.Warehouse?.Name ?? "N/A")</td>
                                    <td>@item.Quantity</td>
                                    <td>@(item.DateCreated?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                                    <td class="text-danger fw-bold">@(item.ReturnDate?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                                    <td class="text-danger fw-bold">@daysOverdue ngày</td>
                                    <td>
                                        <div class="action-buttons">
                                            <a asp-controller="BorrowRequest" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                                <i class="fas fa-info-circle"></i>
                                            </a>
                                            <a asp-controller="BorrowRequest" asp-action="ReturnAsset" asp-route-id="@item.Id" 
                                               class="btn btn-sm btn-success" title="Trả tài sản">
                                                <i class="fas fa-undo-alt"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }